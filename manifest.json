{
	"manifest_version": 2,

	"name": "__MSG_name__",
	"description": "__MSG_description__",
	"version": "1.0",

	"minimum_chrome_version": "23",
	
	"default_locale": "en",
	"options_page": "options.html",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage",
		"alarms",
		"notifications",
		"https://*/",
		"http://*/"
	],
	
	"background": {
		"scripts": ["crucible.js", "events.js"],
		"persistent": true
	}
}